<?xml version="1.0" encoding="UTF-8"?>


<persistence:persistence version="2.0" 
xmlns:persistence="http://java.sun.com/xml/ns/persistence" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd ">
  <persistence:persistence-unit name="JSF" transaction-type="RESOURCE_LOCAL">
  
  	<persistence:provider>org.eclipse.persistence.jpa.PersistenceProvider</persistence:provider>
  		<persistence:class>com.google.jpa.UsuarioJPA</persistence:class>
 	 	<persistence:properties>
  			<persistence:property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
  			<persistence:property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dawiidb"/>
  			<persistence:property name="javax.persistence.jdbc.user" value="root"/>
  			<persistence:property name="javax.persistence.jdbc.password" value="mysql"/>
  		</persistence:properties>
  </persistence:persistence-unit>
  
</persistence:persistence>
