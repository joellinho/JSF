<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<!-- Para monitorear las fases de las vistas -->
	<lifecycle>
		<phase-listener>com.google.log.LogViews</phase-listener>
	</lifecycle>
	<!-- FIN monitorear las fases de las vistas -->

	<!-- Se usa para la internacionalizaciÃ³n // Cambio de idiooma -->
	<application>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>mensajes</base-name>
			<var>msg</var>
		</resource-bundle>
		
		<!-- Para las validaciones personalizadas, jsf.properties -->
		<message-bundle>jsf</message-bundle>
	</application>
	<!-- -->
</faces-config>
